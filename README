Task 5
sudo su - fred
ssh-keygen -t rsa -b 4096 -C "gohjiajun@gmail.com"

mkdir -p ~/.ssh
chmod 700 ~/.ssh
cat ~/.ssh/id_rsa.pub >> ~/.ssh/authorized_keys
chmod 600 ~/.ssh/authorized_keys
sudo chown -R fred:fred ~/.ssh

